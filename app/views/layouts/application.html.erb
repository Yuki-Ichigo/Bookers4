<!DOCTYPE html>
<html>
  <head>
    <title>Bookers4</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class = "container">
        <nav class="nav navbar-nav navbar-left">
          <span><font size="4" color="#ffffff">Bookers</font></span>
        </nav>

      <!-- ログイン前 -->
      <% if user_signed_in? %>
        <ul class = "nav navbar-nav navbar-right" date-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
          <li class="header">
            <%= link_to user_path(current_user.id) do %>
              <span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span>
            <% end %>
          </li>
          <li class="header">
            <%= link_to users_path do %>
              <span class="glyphicon glyphicon-user" aria-hidden="true"> Users</span>
            <% end %>
          </li>
          <li class="header">
            <%= link_to books_path do %>
              <span class="glyphicon glyphicon-book" aria-hidden="true"> Books</span>
            <% end %>
          </li>
          <li class="header">
            <%= link_to destroy_user_session_path, method: :delete do %>
              <span class="glyphicon glyphicon-log-out" aria-hidden="true"> logout</span>
            <% end %>
          </li>
        </ul>
      <% else %>
        <ul class = "nav navbar-nav navbar-right" date-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
          <li class="header">
            <%= link_to root_path do %>
              <span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span>
            <% end %>
          </li>
           <li class="header">
            <%= link_to about_path do %>
              <span class="glyphicon glyphicon-link" aria-hidden="true"> About</span>
            <% end %>
          </li>
          <li class="header">
            <%= link_to new_user_registration_path do %>
              <span class="glyphicon glyphicon-edit" aria-hidden="true"> sign up</span>
            <% end %>
          </li>
          <li class="header">
            <%= link_to new_user_session_path do %>
              <span class="glyphicon glyphicon-log-in" aria-hidden="true"> login</span>
            <% end %>
          </li>
        </ul>
      <% end %>
      </div>
    </header>

    <main class = "container" >
      <br>
      <br>
      <br>
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
    <%= yield %>
    </main>

    <footer>
      <div  class = "container">
      <p class = "pull-right">CopyRight Infratop.inc</p>
      </div>
    </footer>
  </body>
</html>
