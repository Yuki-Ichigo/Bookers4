<div class="col-xs-9">
    <h2>Books</h2>
	<table class = "table">
		<thead>
			<tr>
				<th class="col-xs-1"></th>
				<th class="col-xs-6">Title</th>
				<th class="col-xs-2">Opinion</th>
			</tr>
		</thead>
		<tbody>
			<tr>
	    		<% @books.each do |book| %>
					<tr>
					<td class="col-xs-1"><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg' %></td>
					<td class="col-xs-6"><%= book.title %></td>
					<td class="col-xs-2"><%= book.body %>
					</tr></td>
				<% end %>
			</tr>
		</tbody>
	</table>
</div>
