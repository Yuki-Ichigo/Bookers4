<%= render 'users/sidebar', user: @user, book: @book %>

<% if @book.errors.any? %>
	<div id="error_explanation" class="alert alert-danger">
		<h3><%= @book.errors.count %>errors</h3>
		<ul>
			<% @book.errors.full_messages.each do  |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>


<div class="col-xs-9">
    <h2>Books</h2>
	<table class = "table">
		<thead>
			<tr>
				<th class="col-xs-1"></th>
				<th class="col-xs-6">Title</th>
				<th class="col-xs-2">Opinion</th>
			</tr>
		</thead>
		<tbody>
			<tr>
	    		<% @books.each do |book| %>
					<tr>
					<td class="col-xs-1"><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", :size =>'40x40' %></td>
					<td class="col-xs-6">
						<%= link_to book_path(book.id) do %>
							<%= book.title %>
						<% end %>
						</td>
					<td class="col-xs-2"><%= book.body %>
					</tr></td>
				<% end %>
			</tr>
		</tbody>
	</table>
</div>
