<div class="col-xs-9">
    <h2>Book detail</h2>
	<table class = "table">
		<tbody>
			<tr>
				<td class="col-xs-1">
					<p><%= attachment_image_tag @book.user, :profile_image, :fill, 30, 30, format: 'jpeg' %></p>
					<p><%= link_to user_path(@book.user_id) do %>
							<%= @book.user.name %>
                       <% end %></p>
				</td>
				<td class="col-xs-2"><%= @book.title %></td>
				<td class="col-xs-4"><%= @book.body %></td>
				<td class="col-xs-1">
					<% if @book.user == current_user %>
						<%= link_to edit_book_path(@book.id) do %>
							<button class="btn-sm btn-success">Edit</button>
						<% end %>
					<% end %>
				</td>
				<td class="col-xs-1">
					<% if @book.user == current_user %>
						<%= link_to book_path(@book.id),method: :delete do %>
							<button class="btn-sm btn-danger">Destroy</button>
						<% end %>
					<% end %>
				</td>
			</tr>
		</tbody>
	</table>
</div>
