<div class="col-xs-3">
	<h2>User info</h2>
	<%= attachment_image_tag user, :profile_image, :fill,100, 100, class: "pull-left profile-thumb", fallback: "no_image.jpg", :size =>'100x100' %>
	<table class="table">
	<tr>
		<th>name</th>
		<td><%= user.name %></td>
	</tr>
	<tr>
		<th>introduction</th>
		<td><%= user.introduction %></td>
	</tr>
    </table>
    <button class="btn btn-default btn-block">
		<%= link_to edit_user_path(user.id)  do %>
		<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
		<% end %>
	</button>

    <h2>New book</h2>
	<%= form_for (book) do |f| %>
	    <div class="form-group">
		    <label for="InputTextarea">Title</label><br>
     		<%= f.text_field :title, class: "col-xs-12 book_title" %>
	    </div>
	    <div class="form-group">
   		    <label for="InputTextarea">Opinion</label><br>
		    <%= f.text_area :body, class: "col-xs-12 book_body" %>
	    </div>
	    <div>
	    	<%= f.submit 'Create Book', class: "btn btn-primary btn-block" %>
	    </div>
	<% end %>
</div>