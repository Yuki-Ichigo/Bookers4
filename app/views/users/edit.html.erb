<h2>User info</h2>
<%= form_for(@user,url:"/users/#{@user.id}") do |f| %>
<div class="field">
	<label>Name</label>
	<%= f.text_field :name%>
</div>

<div class="field">
	<label>Image</label>
	<%= f.attachment_field :profile_image %>
</div>

<div>
	<label>Introduction</label>
	<%= f.text_field :introduction%>
</div>

<div class="actions">
	<%= f.submit 'Update User' %>
</div>

<% end %>
