<div class="col-xs-3">
	<h2>User info</h2>
	<%= attachment_image_tag @user, :profile_image, :fill,100, 100, format: 'jpeg' %>
	<table class="table">
	<tr>
		<th>name</th>
		<td><%= @user.name %></td>
	</tr>
	<tr>
		<th>introduction</th>
		<td><%= @user.introduction %></td>
	</tr>
    </table>
    <button class="btn btn-default btn-block">
		<%= link_to edit_user_path(@user.id)  do %>
		<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
		<% end %>
	</button>

    <h2>New book</h2>
	<%= form_for (@book) do |f| %>
	    <div class="form-group">
		    <label for="InputTextarea">Title</label><br>
     		<%= f.text_field :title, class: "col-xs-12 book_title" %>
	    </div>
	    <div class="form-group">
   		    <label for="InputTextarea">Opinion</label><br>
		    <%= f.text_area :body, class: "col-xs-12 book_body" %>
	    </div>
	    <div>
	    	<%= f.submit 'Create Book', class: "btn btn-primary btn-block" %>
	    </div>
	<% end %>
</div>


<div class="col-xs-9">
    <h2>Users</h2>
	<table class = "table">
		<thead>
			<tr>
				<th class="col-xs-3">画像</th>
				<th class="col-xs-4">name</th>
				<th class="col-xs-2"></th>
			</tr>
		</thead>
		<tbody>
			<tr>
	    		<% @users.each do |user| %>
					<tr>
					<td class="col-xs-3"><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg' %></td>
					<td class="col-xs-4"><%= user.name %></td>
					<td class="col-xs-2"><%= link_to 'Show', user_path(user.id) %>
					</tr></td>
				<% end %>
			</tr>
		</tbody>
	</table>
</div>
