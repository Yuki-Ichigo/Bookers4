<div class="col-xs-3">
	<h2>User info</h2>
	画像
	<table class="table">
	<tr>
		<th>name</th>
		<td><%= @user.name %></td>
	</tr>
	<tr>
		<th>introduction</th>
		<td><%= @user.introduction %></td>
	</tr>
    </table>
    <button class="btn btn-default btn-block">
	<!-- 入れれていないアイコン	<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span> -->
		<%= link_to "あ", edit_user_path(@user.id) %>
	</button>

    <h2>New book</h2>
	<div class="form-group">
			<div class="InputTextarea">
				<label for="InputEmail">Title</label>
				<input type="text" class="form-control" placeholder="タイトルを入力してください">
		</div>
		<div class="form-group">
		<label for="InputTextarea">Opinion</label>
		<textarea class="form-control" id="InputTextarea" placeholder="本についての感想など投稿を入力してください"></textarea>
	</div>
	<button class="btn btn-default btn-block">
		<%= link_to "Create Book", edit_user_path(@user.id) %>
	</button>
	</div>
</div>

<div class="col-xs-9">
    <h2>Users</h2>
	<table class = "table">
		<thead>
			<tr>
				<th class="col-xs-3">画像</th>
				<th class="col-xs-4">name</th>
				<th class="col-xs-2"></th>
			</tr>
		</thead>
		<tbody>
			<tr>
	    		<% @users.each do |user| %>
					<tr>
					<td class="col-xs-3">画像</td>
					<td class="col-xs-4"><%= user.name %></td>
					<td class="col-xs-2"><%= link_to 'Show', user_path(user.id) %>
					</tr></td>
				<% end %>
			</tr>
		</tbody>
	</table>
</div>
